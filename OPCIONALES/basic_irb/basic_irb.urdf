<?xml version="1.0"?>

<robot name="arm_robot">

    <link name="base_link">

        <inertial>
            <origin xyz="0 0 0.1" />
            <mass value="10000.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
            iyy="1.0" iyz="0.0" izz="1.0" />

        </inertial>
        <visual>        
            <origin xyz="0 0 0.1" />
            <geometry>
                <box size="0.4 0.4 0.2" />
            </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0.1" />
            <geometry>
             <box size="0.4 0.4 0.2" />
            </geometry>
        </collision>

    </link>

    <material name="blue">
        <color rgba="0 0 0.8 1" />
    </material>

    # Vertical azul
    <link name="body_link">

        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0.5" />
            <mass value="1.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
            iyy="0.0" iyz="0.0" izz="1.0" />

        </inertial>
        <visual>        
            <origin rpy="0 0 0" xyz="0 0 0.5" />
            <geometry>
                <box size="0.1 0.1 0.8" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.5" />
            <geometry>
             <box size="0.1 0.1 0.8" />
            </geometry>
        </collision>

    </link>

    <joint name="base_to_body" type="revolute">
        <parent link="base_link" />
        <child link="body_link" />
        <dynamics damping="0.0" friction="0.00001" />
        <origin xyz="0.05 0 0.1" />
        <axis xyz="0 1 0" /> <!--Rotación en eje y-->

        <limit lower="-0.14" upper="0.14" effort="10.0" velocity="0.5" />
    </joint>

    # Horizontal azul
    <link name="arm_link">
        <inertial>
            <origin rpy="0 0 0" xyz="0.15 0 0" />
            <mass value="1.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
            iyy="0.0" iyz="0.0" izz="1.0" />

        </inertial>
        <visual>        
            <origin rpy="0 0 0" xyz="0.15 0 0" />
            <geometry>
                <box size="0.4 0.1 0.1" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0.15 0 0" />
            <geometry>
             <box size="0.4 0.1 0.1" />
            </geometry>
        </collision>

    </link>

    <joint name="body_to_arm" type="revolute">
        <parent link="body_link" />
        <child link="arm_link" />
        <dynamics damping="0.0" friction="0.00001" />
        <origin xyz="0.05 0 0.9" /> <!-- Encima de body_link -->
        <axis xyz="0 0 1" /> <!--Rotación en eje z-->

        <limit lower="-0.14" upper="0.14" effort="10.0" velocity="0.5" />
    </joint>


</robot>