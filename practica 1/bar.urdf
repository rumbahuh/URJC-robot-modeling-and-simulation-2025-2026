<?xml version="1.0"?>

<robot name="finish_line">

    <material name="red">
        <color rgba="1 0 0 1" />
    </material>

    <link name="base_link">

        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <mass value="1.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
            iyy="0.0" iyz="0.0" izz="1.0" />

        </inertial>
        <visual>        
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
                <box size="0.1 0.1 0.5" />
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <geometry>
             <box size="0.1 0.1 0.8" />
            </geometry>
        </collision>

    </link>

    <link name="body_link">
        <visual>        
            <origin rpy="0 0 0" xyz="0.85 0 0" />
            <geometry>
                <box size="2 0.1 0.1" />
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <origin rpy="0 0 0" xyz="0.85 0 0" />
            <geometry>
             <box size="2 0.1 0.1" />
            </geometry>
        </collision>

    </link>

    <joint name="base_to_body" type="revolute">
        <parent link="base_link" />
        <child link="body_link" />
        <dynamics damping="0.0" friction="0.00001" />
        <origin xyz="0 0 0.14493" /> <!-- Altura del chassis delantero según el código urdf del husky -->
        <axis xyz="0 0 1" /> <!--Rotación en eje z-->

        <limit lower="-0.14" upper="0.14" effort="10.0" velocity="0.5" />
    </joint>


</robot>